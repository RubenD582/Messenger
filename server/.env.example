# Database Configuration
DB_HOST=postgres
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=messenger
DB_PORT=5432

# Redis Configuration
REDIS_SENTINEL=true
REDIS_PASSWORD=redispass123
REDIS_SENTINEL_HOST_1=redis-sentinel-1
REDIS_SENTINEL_HOST_2=redis-sentinel-2
REDIS_SENTINEL_HOST_3=redis-sentinel-3

# For local development (without Docker), set:
# REDIS_SENTINEL=false
# REDIS_HOST=localhost
# REDIS_PORT=6379

# Kafka Configuration
KAFKA_BROKERS=kafka:9092

# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Configuration (generate your own keys in production)
# Use: openssl genrsa -out config/keys/private_key.pem 2048
# Use: openssl rsa -in config/keys/private_key.pem -pubout -out config/keys/public_key.pem

# Email Configuration (for OTP verification)
# For Gmail: Use an App Password (https://myaccount.google.com/apppasswords)
# For development: Leave blank to log OTPs to console
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM="Messenger App" <noreply@messenger.app>

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:3000
